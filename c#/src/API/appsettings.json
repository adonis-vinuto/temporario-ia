{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {},
  "GemelliApiSettings": {
    "FrontEndUrl": "",
    "EmailNaoResponda": ""
  },
  "SmtpSettings": {
    "Host": "smtp.sendgrid.net",
    "Porta": "587",
    "Usuario": "apikey"
  },
  "Keycloak": {
    "Realm": "KomvosMind",
    "AuthServerUrl": "https://kc.statum.com.br/",
    "SslRequired": "external",
    "Resource": "komvos-mind",
    "PublicClient": true,
    "ConfidentialPort": 0,
    "VerifyTokenAudience": false
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.MySql", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Diagnostics": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MySQL",
        "Args": {
          "connectionString": "Server=localhost;Database=localdb;Uid=user;Pwd=password;",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "API"
    }
  },
  "TemplateEmailSettings": {
    "BasePath": "../Infrastructure/EmailTemplates"
  }
}
